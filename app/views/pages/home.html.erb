<!-- Header-->
<header class="bg-dark py-5">
	<div class="container px-5">
		<div class="row gx-5 justify-content-center">
			<div class="col-lg-6">
				<div class="text-center my-5">
					<h1 class="display-5 fw-bolder text-white mb-2">ðŸ”„ Palindrome Magic: Unveil the Hidden Palindromes! ðŸ”„</h1>
					<p class="lead text-white-50 mb-4">Welcome to the Palindrome Magic Checker! Enter any sentence below, and we'll reveal all the palindromes hidden within. Whether it's a single word or a complex sentence, our magic checker will find it for you!</p>
					<div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
						<a class="btn btn-primary btn-lg px-4 me-sm-3" href="#checker">Get Started</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</header>
<!-- Pricing section-->
<section class="bg-light py-5 border-bottom" id="checker">
	<div class="container px-5 my-5">
		<div class="text-center mb-5">
			<h2 class="fw-bolder">The Palindrome Magic</h2>
		</div>
		<div class="row gx-5 justify-content-center">
			<!-- Pricing card free-->
			<div class="col-lg-6 ">
				<div class="card mb-5 mb-xl-0">
					<div class="card-body p-5">
						<div class="mb-3">
							<%= form_with url: checker_path, local: true do |form| %>
								<div class="mb-3">
									<%= form.label :text, "Enter a word or sentence", class: "mb-2" %>
									<%= form.text_area :text, class: "form-control", rows: 5 %>
								</div>
								<div>
									<%= form.submit "Check", class: "btn btn-primary" %>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
			<!-- Pricing card pro-->
			<div class="col-lg-6 ">
				<div class="card mb-5 mb-xl-0">
					<div class="card-body p-5">
						<% if @text.present? %>
							<h2>âœ¨ Result âœ¨</h2>
							<% if @palindromes.any? %>
								<p>The following palindromes were found in your sentence:</p>
								<ul>
									<% @palindromes.each do |palindrome| %>
										<li><%= palindrome %></li>
									<% end %>
								</ul>
							<% else %>
								<p>No palindromes found in your sentence.</p>
							<% end %>
							<% if @non_palindromes.any? %>
								<hr>
								<p>The following words are not palindromes:</p>
								<ul>
									<% @non_palindromes.each do |non_palindrome| %>
										<li><%= non_palindrome %></li>
									<% end %>
								</ul>
							<% end %>
						<% else %>
							<div class="text-center">
								<%= image_tag("checker.jpeg", width: 400) %>
							</div>
							<div class="mt-2 justify-content-center text-center">
								This Palindrome Checker prints out the palindromes and the non palindromes 
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
